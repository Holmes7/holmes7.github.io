---
const projects = [
    {
        "name": "MapReduce",
        "url": "https://github.com/Holmes7/MapReduce",
        "description": "A simplified distributed MapReduce system built from scratch in Go, with the goal of gaining a deep understanding of the fundamental challenges it addresses. Handles task distribution, fault tolerance, and parallel processing, resembling the concepts from the classic MapReduce paper.",
        "tags": ["distributed-systems", "go"]
    },
    {
        "name": "Random Mashup Generator",
        "url": "https://github.com/Holmes7/Random-Mashup-Generator",
        "description": "A web application developed with TypeScript and ReactJS, designed to automate the process of selecting random coding problems of a specific difficulty level that remain unsolved by a group of users.",
        "tags": ["typescript", "reactjs", "competitive-programming"]
    },
    {
        "name": "CF-Static-Site-Enhancer",
        "url": "https://github.com/Holmes7/CF-Static-Site-Enhancer",
        "description": "CF Static Site Enhancer is a browser extension that augments your Codeforces contest experience on it's static sites. Track friends' standings, copy input data effortlessly, predict rating changes, and monitor problem submission counts.",
        "tags": ["chrome-extension", "javascript", "competitive-programming"]
    },
    {
        "name": "This Website!",
        "url": "/",
        "description": "My personal website built with Astro and TailwindCSS",
        "tags": ["astro", "tailwind"]
    }
]
// bg-gradient-to-bl from-gray-900 to-gray-600
---
<section class="grid lg:grid-cols-3 gap-6">
    {projects.map((project) => (
        <div class="group relative bg-gray-900 rounded-lg border border-gray-800 overflow-hidden transition-all duration-300 hover:shadow-lg hover:shadow-gray-800/50 hover:-translate-y-1">
            <a href={project.url} class="block p-6">
                {/* Project Header */}
                <h2 class="text-xl font-semibold text-gray-100 group-hover:text-blue-400 transition-colors">
                    {project.name}
                </h2>

                {/* Tags Section */}
                <div class="flex flex-wrap gap-2 mt-3">
                    {project.tags.map((tag) => (
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-sm font-medium bg-gray-800 text-gray-300">
                            {tag}
                        </span>
                    ))}
                </div>

                {/* Description with gradient fade */}
                <div class="relative mt-4">
                    <p class="text-base text-gray-400">
                        {project.description}
                    </p>
                </div>

                {/* Visit Project Link */}
                <div class="mt-4 flex items-center text-sm text-blue-400">
                    Visit Project
                    <svg
                        class="w-4 h-4 ml-1 transition-transform group-hover:translate-x-1" 
                        xmlns="http://www.w3.org/2000/svg" 
                        viewBox="0 0 24 24" 
                        fill="none" 
                        stroke="currentColor" 
                        stroke-width="2" 
                        stroke-linecap="round" 
                        stroke-linejoin="round"
                    >
                        <line x1="5" y1="12" x2="19" y2="12"></line>
                        <polyline points="12 5 19 12 12 19"></polyline>
                    </svg>
                </div>
            </a>

            {/* Top gradient accent */}
            <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-blue-500 to-purple-500"></div>
        </div>
    ))}
</section>
